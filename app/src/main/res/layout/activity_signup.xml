<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ToolbarSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ToolbarSign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic_instagram_wordmark_white" />

    <EditText
        android:id="@+id/etUserSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etName"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHighlight="@color/blueI"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/blueI"
        android:textCursorDrawable="@color/blueI"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHighlight="@color/blueI"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/blueI"
        android:textCursorDrawable="@color/blueI"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etPassSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUserSign"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHighlight="@color/blueI"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/blueI"
        android:textCursorDrawable="@color/blueI"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/etUserSign" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassSign"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHighlight="@color/blueI"
        android:textColorHint="@android:color/darker_gray"
        android:textColorLink="@color/blueI"
        android:textCursorDrawable="@color/blueI"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/blueI"
        android:text="@string/sign_up" />

    <ImageButton
        android:id="@+id/ibProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="156dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:backgroundTint="@color/blueI"
        android:padding="0dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@tools:sample/avatars" />


</RelativeLayout>